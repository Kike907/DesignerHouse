@model DesignerHouse.Models.ViewModel.ProductsViewModel
@using DesignerHouse.Extensions
@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Product Details</h1>

        <div class="p-4 border rounded row">  
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class=col-8>
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="ProductTypes.Name" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="ProductTypes.Name" readonly class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="ProductTypes.Price" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="ProductTypes.Price" readonly class="form-control" />
                            </div>
                            
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label class="control-label">Product Types</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="ProductTypes.Products.Name" readonly class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="SpecialTags" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="ProductTypes.SpecialTags.Name" readonly class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="ProductTypes.ShadeColor" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                <input asp-for="ProductTypes.ShadeColor" readonly class="form-control" />
                            </div>
                            
                        </div>

                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="ProductTypes.Available" class="control-label"></label>
                            </div>
                            <div class="col-8">
                                <input type="checkbox" readonly class="form-control" asp-for="ProductTypes.Available" />
                            </div>
                        </div>
                    </div>

                    <div class="col-1">

                    </div>

                    <div class="col-3">
                        <img src="@Model.ProductTypes.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;"/>

                    </div>
                    <br/>
                    <div class="form-group">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.ProductTypes.Id"> Edit </a>
                        <a asp-action="Index" class="btn btn-success">Back to List</a>
                    </div>      
                </div>  
        </div>
    