@model IEnumerable<DesignerHouse.Models.SpecialTags>
@{
    ViewData["Title"] = "Index";
}

<br/><br/>

<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Special Tags List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Special Tags </a>
    </div>
</div>

<br/>
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td style="width:200px" text-align-right>
                    <a asp-action="Edit" asp-route-id="@item.Id" type="button" style="font-size: 1.2rem; color: white;" class="btn btn-primary"><i class="fas fa-edit"></i></a> 
                    <a asp-action="Details" asp-route-id="@item.Id" type="button" style="font-size: 1.2rem; color: white;" class="btn btn-success"><i class="far fa-list-alt"></i></a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" type="button" style="font-size: 1.2rem; color: white;" class="btn btn-danger" ><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </table>
</div>