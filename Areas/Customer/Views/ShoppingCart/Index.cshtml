@model DesignerHouse.Models.ViewModel.ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
}

<form method="post">
    <br/><br/>
    <h2 class="text-info">Your Shopping Cart</h2>
    <br/>
    @if(Model.ProductTypes.Count > 0)
    {
        <div class="container border border-secondary rounded" style="padding:15px;">
            <div class="row">
                <div class="col-8" style="border-right:1px solid #bbb9b9;">
                    <table class="table table-striped" width="100%">
                        <tr class="table-info">
                            <th style="text-align:center; width:20%"></th> 
                            <th style="text-align:center;">
                                <label asp-for="@Model.ProductTypes.FirstOrDefault().Name"></label>
                            </th> 
                            <th style="text-align:center;">
                                <label asp-for="@Model.ProductTypes.FirstOrDefault().Price"></label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.ProductTypes.FirstOrDefault().ShadeColor"></label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.ProductTypes.FirstOrDefault().Products.Name"></label>
                            </th>
                            <th style="text-align:center;"></th>
                        </tr>
                        @foreach ( var item in Model.ProductTypes)
                        {
                            <tr style="padding:50px;">
                                <td>
                                    <a asp-area="Customer" asp-controller="Home" asp-actions="Details" asp-route-id="@item.Id">
                                        <img src="@item.Image" width="100%" style="margin:auto; display:block; border-radius:5px; border:1px solid #bbb9b9;"/>
                                    </a>
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(c => item.Name)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(c => item.Price)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(c => item.ShadeColor)
                                </td>
                                <td style="text-align:center">
                                    @Html.DisplayFor(c => item.Products.Name)
                                </td>
                                <td style="text-align:center">
                                    <button type="submit" class="btn btn-danger" asp-action="remove" asp-route-id="@item.Id">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </table>
                </div>

                <div class="col-4" style="padding-left:30px;">
                    <div class="row">
                        <div class="col-12">
                            <label> Name : </label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Appointments.CustomerName" class="form-control"/>
                        </div>

                        <div class="col-12">
                            <label> Phone Number : </label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Appointments.CustomerPhoneNumber" class="form-control"/>
                        </div>

                        <div class="col-12">
                            <label> Email : </label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Appointments.CustomerEmail" class="form-control"/>
                        </div>

                        <div class="col-12">
                            <label> Appointment Date : </label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Appointments.AppointmentDate" id="txtDate" value="" type="Date"  class="form-control"/>
                        </div>

                        <div class="col-12">
                            <label> Appointment Time : </label>
                        </div>
                        <div class="col-12" style="padding-bottom:15px">
                            <input asp-for="@Model.Appointments.AppointmentTime" value="" type="Time"  id="timepicker" class="form-control"/>
                        </div>

                        <div>
                            <button type="submit" id="btnPlaceOrder" class="btn btn-success"> Schedule Appointment</button>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    }
    else
    {
        <div>No item added to the shopping cart</div>
    }
</form>
@section Scripts{
    <script type="text/javascript">
    $().timepicker({
        timeFormat: 'h:mm p',
        interval: 30,
        minTime: '10',
        maxTime: '3:00pm',
        defaultTime: '11',
        startTime: '10:00',
        dynamic: true,
        dropdown: true,
        scrollbar: true,
    });

    $(function () {
        $("#txtDate").datepicker({
            changeMonth: true,
            changeYear: true,
            format: "dd/mm/yyyy",
            language: "tr"
        });
    });
</script>
}



         

        
        

       


        
